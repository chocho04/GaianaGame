<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".FinalActivity">


    <VideoView
        android:id="@+id/vvBackground2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnA0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="нова игра?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vvBackground2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГАФ 1"
        app:layout_constraintBottom_toBottomOf="@+id/btnGaf3"
        app:layout_constraintEnd_toStartOf="@+id/btnGaf3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ГАФ 2"
        app:layout_constraintBottom_toTopOf="@+id/btnGaf7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГАФ 3"
        app:layout_constraintBottom_toBottomOf="@+id/btnGaf3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGaf3" />

    <Button
        android:id="@+id/btnGaf6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГАФ 4"
        app:layout_constraintBottom_toBottomOf="@+id/btnGaf7"
        app:layout_constraintEnd_toStartOf="@+id/btnGaf7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ГАФ 5"
        app:layout_constraintBottom_toTopOf="@+id/btnGaf10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГАФ 6"
        app:layout_constraintBottom_toBottomOf="@+id/btnGaf7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGaf7" />

    <Button
        android:id="@+id/btnGaf9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГАФ 7"
        app:layout_constraintBottom_toBottomOf="@+id/btnGaf10"
        app:layout_constraintEnd_toStartOf="@+id/btnGaf10"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ГАФ 8"
        app:layout_constraintBottom_toTopOf="@+id/btnA0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGaf15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГАФ 9"
        app:layout_constraintBottom_toBottomOf="@+id/btnGaf10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGaf10" />

    <TextView
        android:id="@+id/tvExplainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaticsc"
        android:text="Поздравления, ти изгуби с чест играта"
        android:textColor="@color/white"
        android:padding="16dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGaf3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>